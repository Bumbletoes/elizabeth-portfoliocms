<%= div_for(image) do %>
	<% if image.title %>
		<%= link_to edit_admin_gallery_image_path(@gallery, image), remote: true, class: 'thumbnail' do %>
			<%= image_tag image.photo.url(:thumb) %>
       		<% end %>
		<%= link_to 'Delete', admin_gallery_image_path(@gallery, image), confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger', remote: true %>
        	<%= link_to 'Edit', edit_admin_gallery_image_path(@gallery, image), class: 'btn btn-default', remote: true %>
	<% end %>
<% end %>

