<%= div_for(gallery, title: gallery.description, class: "col-sm-6 col-md-3") do %> 
	<div class="thumbnail">
		<%= image_tag "no-image.jpg", alt: "no image", class: "img-polaroid" %>
		<!-- <img class="img-polaroid" data-src="holder.js/300%x200" alt="..."> -->
		<div class="caption">
			<h3><%= gallery.name %></h3>
			<p class="gallery-description"><%= gallery.description %></p>
			<p>
				
				<%= link_to "Edit", edit_admin_gallery_path(gallery), role: "button",class: "btn btn-default" %>
				<%= link_to "Delete", admin_gallery_path(gallery), method: :delete,role: "button", data:{confirm: 'Are you sure?'},class: "btn btn-danger", remote: true %>
			</p>
		</div>
	</div>
<% end %>




